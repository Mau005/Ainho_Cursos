

<Inicio>:
    manejador_sub_ventanas : manejador_sub_ventanas
    MDNavigationLayout:
        ScreenManager:

            MDScreen:
                radius: [25, 0, 0, 0]
                BoxLayout:
                    orientation: "vertical"
                    MDTopAppBar:
                        title: "Ainho Cursos v1.0 Beta"
                        #elevation: 10
                        pos_hint: {"top": 1}
                        size_hint_y: None
                        height: "20dp"
                    ScreenManager:
                        id: manejador_sub_ventanas
        MDNavigationDrawer:
            id: nav_drawer
            BoxLayout:
                orientation: "vertical"
                padding: "8dp"
                spacing: "8dp"

                AnchorLayout:
                    anchor_x: "left"
                    size_hint_y: None
                    height: avatar.height
                    MDCard:
                        pos_hint: {'center_x': .5, 'center_y': .5}
                        size_hint: None, None
                        size: "256dp", "256dp"
                        #elevation: 10

                    Image:
                        id: avatar
                        pos_hint: {'center_x': .5, 'center_y': .5}
                        size_hint: None, None
                        size: "256dp", "256dp"
                        source: "Assets/Imagen.png"


                MDLabel:
                    text: "Cuenta:"
                    font_style: "Button"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDLabel:
                    id: label_correo
                    text: "mpino1701@gmail.com"
                    font_style: "Caption"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDTextButton:
                    icon: "language-python"
                    text: "Cursos"

                MDTextButton:
                    icon: "language-python"
                    text: "Mis Cursos"

                MDTextButton:
                    icon: "language-python"
                    text: "Mis Suscripciones"

                MDTextButton:
                    icon: "language-python"
                    text: "Salir"

                MDFillRoundFlatIconButton:
                    icon: "language-python"
                    text: "Suscribete"
                ScrollView:
                    id: md_list
                    BoxLayout:
                        orientation: "vertical"
                        size_hint_y: None
                        MDTextButton:
                            icon: "language-python"
                            text: "Mis Cursos"
                        MDTextButton:
                            icon: "language-python"
                            text: "Mis Cursos"
                        MDTextButton:
                            icon: "language-python"
                            text: "Mis Cursos"
                        MDTextButton:
                            icon: "language-python"
                            text: "Mis Cursos"


<SwiperObjectos@MDSwiperItem>
    image:image
    boton_curso : boton_curso
    RelativeLayout:
        FitImage:
            id: image
            radius: [30,]

        MDBoxLayout:
            adaptive_height: True
            spacing: "12dp"
            radius: [0, 0, image.radius[0], image.radius[0]]


            MDTextButton:
                id: boton_curso
                font_style: "H5"
                size_hint_y: None
                height: self.texture_size[1]
                pos_hint: {"center_y": .5}
                shorten: True

<ContenidoCurso>:
    manejador : manejador
    MDCard:
        id: screen
        orientation: "vertical"
        size_hint: .95, .95
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        ScreenManager:
            id: manejador

<ListaCursos>
    contenedor:contenedor
    MDCard:
        id: screen
        orientation: "vertical"
        size_hint: .9, .85
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        MDTopAppBar:
            id: toolbar
            title: "Curso Hardware: "
            elevation: 10
            pos_hint: {'top': 1}
        ScrollView:
            bar_width: 10
            do_scroll_x: False
            MDList:
                id: contenedor
                spacing: "10dp"
                padding: "30dp"

<Cursos>
    contenedor_imagenes: contenedor_imagenes
    MDBoxLayout:
        orientation: 'vertical'
        spacing: '8dp'
        MDSwiper:
            id: contenedor_imagenes
<Paginas>:
    contenedor : contenedor
    MDList:
        id: contenedor
        spacing: "10dp"
        padding: "30dp"
    MDBoxLayout:
        size_hint_y: None
        height: "20dp"
        MDFillRoundFlatButton:
            text: "Atras"
        MDFillRoundFlatButton:
            text: "Siguiente"
        FitImage:
            id: image
            source: root.source
            radius: [30,]

        MDBoxLayout:
            adaptive_height: True
            spacing: "12dp"
            radius: [0, 0, image.radius[0], image.radius[0]]

            KitchenSinkSwiperMagicButton:
                id: icon
                icon: "weather-sunny"
                user_font_size: "30sp"

            MDTextButton:
                id: nombre
                font_style: "H5"
                size_hint_y: None
                height: self.texture_size[1]
                pos_hint: {"center_y": .5}

                shorten: True




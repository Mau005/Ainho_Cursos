
<RegistrarUsuarios>:
    MDCard:
        size_hint: None, None
        size: 400, 500
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        #elevation: 50
        padding: 25
        spacing: 25
        orientation: 'vertical'
        MDBoxLayout
            orientation: 'vertical'

            MDBoxLayout:
                orientation: "horizontal"
                MDLabel:
                    text: "Correo: "
                MDTextField:
                    id: corre_text
                    multiline: False
            MDBoxLayout:
                orientation: "horizontal"
                MDLabel:
                    text: "Password: "
                MDTextField:
                    multiline: False
                    password: True
                    id: pass_text
            MDBoxLayout:
                orientation: "horizontal"
                MDLabel:
                    text: "Repetir Password: "
                MDTextField:
                    multiline: False
                    password: True
                    id: pass_text_repetir
            MDBoxLayout:
                orientation: "horizontal"
                MDRoundFlatButton:
                    text: "Registrar!"
                    on_press: root.registrar(corre_text.text,pass_text.text,pass_text_repetir.text)
                MDRoundFlatButton:
                    text: "Salir"
                    on_press: root.siguiente("ingreso")

<Ingresos>:

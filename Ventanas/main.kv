#: include Ventanas/cursos.kv

<RegistrarUsuarios>:
    MDCard:
        size_hint: None, None
        size: 400, 500
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        #elevation: 50
        padding: 25
        spacing: 25
        orientation: 'vertical'
        MDBoxLayout
            orientation: 'vertical'

            MDBoxLayout:
                orientation: "horizontal"
                MDLabel:
                    text: "Correo: "
                MDTextField:
                    id: corre_text
                    multiline: False
            MDBoxLayout:
                orientation: "horizontal"
                MDLabel:
                    text: "Password: "
                MDTextField:
                    multiline: False
                    password: True
                    id: pass_text
            MDBoxLayout:
                orientation: "horizontal"
                MDLabel:
                    text: "Repetir Password: "
                MDTextField:
                    multiline: False
                    password: True
                    id: pass_text_repetir
            MDBoxLayout:
                orientation: "horizontal"
                MDRoundFlatButton:
                    text: "Registrar!"
                    on_press: root.registrar(corre_text.text,pass_text.text,pass_text_repetir.text)
                MDRoundFlatButton:
                    text: "Salir"
                    on_press: root.siguiente("ingreso")

<Ingresos>:
    MDCard:
        size_hint: .9,.8
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        #elevation: 50
        padding: 25
        spacing: 25
        orientation: 'vertical'
        MDLabel:
            id: bienvenido_texto
            text: "Ainho Cursos v1.0Beta"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
        MDTextField:
            id: usuario
            hint_text: "correo"
            icon_right: "account"
            font_size: 18
            pos_hint: {"center_x": 0.5}
        MDTextField:
            id: password
            hint_text: "contraseña"
            icon_right: "eye-off"
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True

        MDLabel:

        MDTextButton:
            text: "Registrarse"
            font_size: 12
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press: root.siguiente("registrar")
        MDRoundFlatButton:
            text: "Conectar"
            font_size: 12
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press: root.siguiente("inicio")
        MDRoundFlatButton:
            text: "Sin Conexión"
            font_size: 12
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press: root.siguiente("inicio")
